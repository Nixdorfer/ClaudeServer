{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Chat",
  "version": "1.1.0",
  "identifier": "com.nixdorfer.claude-client",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../src-vue/pc/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Claude Client by Nix",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper",
        "silent": true
      }
    },
    "android": {
      "minSdkVersion": 24
    }
  }
}
